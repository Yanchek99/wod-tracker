.nested-fields.card.mb-3
  .card-body
    .form-row
      .col = f.input :rounds
      .col = f.input :time
      .col = f.input :interval
    .row
      .col#segmented_exercises
        = f.simple_fields_for :exercises do |exercise_form|
          = render 'exercise_fields', f: exercise_form
        .links.d-grid
          = link_to_add_association 'Add Exercise', f, :exercises, class: 'btn btn-sm btn-outline-primary'
    .row
      .col.d-grid
        = link_to_remove_association 'Delete Segment', f, class: 'btn btn-sm btn-danger mt-2'
